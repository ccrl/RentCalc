<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mBaseTheme" />

    <!--  DIALOG  -->

    <style name="mBaseTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert"/>
    <style name="mBaseTheme.Dialog.AddUnit">
    </style>

    <!--  DIVIDER  -->
    <style name="mBaseTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimens_1_dp</item>
        <item name="android:background">@color/color_gray_400</item>
    </style>

    <!--  IMAGEBUTTON  -->
    <style name="mBaseTheme.mImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="mBaseTheme.mImageButton.NavDrawer">
        <item name="android:tint">@color/color_gray_800</item>
    </style>

    <!--  TEXTVIEW  -->
    <style name="mBaseTheme.mTextView">
        <item name="android:textColor">@color/color_gray_800</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimens_16_sp</item>
    </style>

    <style name="mBaseTheme.mTextView.NavDrawer">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimens_20_sp</item>
    </style>

    <style name="mBaseTheme.mTextView.Dialog" />

    <style name="mBaseTheme.mTextView.Dialog.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mBaseTheme.mTextView.Dialog.Value" />

    <!--  TOOLBAR  -->
    <style name="mBaseTheme.mImageButton.Toolbar">

    </style>
</resources>
